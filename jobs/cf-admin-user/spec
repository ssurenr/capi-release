---
name: cf-admin-user
packages: []
templates:
  ignoreme: ignoreme

provides:
- name: cf-admin-user
  type: api-user
  properties:
  - api_url
  - ca_cert
  - admin_username
  - admin_password
properties:
  api_url:
    description: URL to Cloud Foundry API
    example: https://api.mydomain.com
  ca_cert:
    description: Root certificate for client access to Cloud Foundry API/UAA
  admin_username:
    description: Password for admin user
    default: bosh
  admin_password:
    description: Password for admin user
